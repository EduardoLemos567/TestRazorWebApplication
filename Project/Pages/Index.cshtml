@page
@model Project.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}
<br>
<h1>Movies</h1>
<br>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category!.Name)
                </td>
                <td>
                    <a asp-page="/Category/View" asp-route-id="@item.Category!.Id">View Category</a>
                </td>
                <td>
                    <a asp-page="/Movie/Watch" asp-route-id="@item.Id">Watch</a>
                </td>
            </tr>
        }
    </tbody>
</table>
