@page
@model Project.Pages.Admin.Enrole.IndexModel;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Selection[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Selection[1].RoleNames)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Selection)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleNames)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.UserId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.UserId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
