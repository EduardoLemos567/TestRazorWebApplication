@model Project.Pages.Admin.Identity.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Identities[0].Alias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identities[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identities[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identities[0].PhoneNumber)
            </th>
            <th></th>
        </tr>
