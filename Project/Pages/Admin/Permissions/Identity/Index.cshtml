@page
@model Project.Pages.Admin.Permissions.Identity.IndexModel

@{
    ViewData["Title"] = "Index";
}
<br>
<h1>Index</h1>
<br>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Identities[0].Alias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identities[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identities[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Identities)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Alias)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
