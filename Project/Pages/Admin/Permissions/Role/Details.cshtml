@page
@model Project.Pages.Admin.Permissions.Role.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<br>
<h1>Details</h1>
<br>
<div>
    <h4>Role</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role.Name)
        </dd>
    </dl>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Permissions)
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int idx = 0; idx < Model.SelectedPermissions.Count; idx++)
            {
                <tr>
                    <td>
                        <label class="control-label">@Html.DisplayFor(m => m.Permissions[m.SelectedPermissions[idx]])</label>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Role.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
